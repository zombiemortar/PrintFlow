<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="gui.controllers.DashboardController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="20" bottom="10" left="20" right="20" />
            </padding>
            <Label text="PrintFlow - Dashboard" styleClass="title" />
            <Label fx:id="welcomeLabel" text="Welcome, User" styleClass="status" />
        </VBox>
    </top>
    
    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="40" bottom="40" left="40" right="40" />
            </padding>
            
            <Label text="Main Menu" styleClass="subtitle" />
            
            <GridPane hgap="20" vgap="15" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150" />
                </columnConstraints>
                
                <Button fx:id="newOrderButton" text="New Order" onAction="#onNewOrder" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                        style="-fx-min-width: 120; -fx-min-height: 40;" />
                <Button fx:id="queueButton" text="Order Queue" onAction="#onQueue" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                        style="-fx-min-width: 120; -fx-min-height: 40;" />
                <Button fx:id="inventoryButton" text="Inventory" onAction="#onInventory" GridPane.columnIndex="2" GridPane.rowIndex="0" 
                        style="-fx-min-width: 120; -fx-min-height: 40;" />
                
                <Button fx:id="pricingButton" text="Pricing/Config" onAction="#onPricing" GridPane.columnIndex="0" GridPane.rowIndex="1" 
                        style="-fx-min-width: 120; -fx-min-height: 40;" />
                <Button fx:id="invoicesButton" text="Invoices" onAction="#onInvoices" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                        style="-fx-min-width: 120; -fx-min-height: 40;" />
                <Button fx:id="logoutButton" text="Logout" onAction="#onLogout" GridPane.columnIndex="2" GridPane.rowIndex="1" 
                        style="-fx-min-width: 120; -fx-min-height: 40;" />
                
                <!-- Admin-only Factory Reset button -->
                <Button fx:id="factoryResetButton" text="Factory Reset" onAction="#onFactoryReset" GridPane.columnIndex="0" GridPane.rowIndex="2" 
                        styleClass="factory-reset" style="-fx-min-width: 120; -fx-min-height: 40;" 
                        visible="false" />
            </GridPane>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" bottom="20" left="20" right="20" />
            </padding>
            <Button fx:id="exportSystemReportCsvButton" text="Export System Report CSV" onAction="#onExportSystemReportCSV" 
                    styleClass="success" style="-fx-min-width: 150; -fx-min-height: 30;" />
            <Button fx:id="exportSystemReportJsonButton" text="Export System Report JSON" onAction="#onExportSystemReportJSON" 
                    styleClass="success" style="-fx-min-width: 150; -fx-min-height: 30;" />
            <Label fx:id="statusLabel" text="Ready" styleClass="status" />
            <Button fx:id="themeToggleButton" text="ðŸŒ™ Dark" onAction="#onThemeToggle" 
                    styleClass="theme-toggle" />
        </HBox>
    </bottom>
</BorderPane>
