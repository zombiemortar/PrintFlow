<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="gui.controllers.InvoiceController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="20" bottom="10" left="20" right="20" />
            </padding>
            <Label text="PrintFlow - Invoice Management" style="-fx-font-size: 24; -fx-font-weight: bold;" />
            <Label fx:id="userLabel" text="User: Loading..." style="-fx-font-size: 14;" />
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="40" bottom="40" left="40" right="40" />
            </padding>
            
            <!-- Order Search Section -->
            <VBox spacing="15" alignment="CENTER">
                <Label text="Search Invoice by Order ID" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                
                <HBox spacing="10" alignment="CENTER">
                    <Label text="Order ID:" style="-fx-font-size: 14;" />
                    <TextField fx:id="orderIdField" promptText="Enter Order ID" style="-fx-min-width: 150;" />
                    <Button fx:id="searchButton" text="Search" onAction="#onSearchOrder" 
                            style="-fx-min-width: 80; -fx-min-height: 30;" />
                </HBox>
                
                <Button fx:id="showAllOrdersButton" text="Show All Orders" onAction="#onShowAllOrders" 
                        style="-fx-min-width: 120; -fx-min-height: 30;" />
            </VBox>
            
            <!-- Invoice Display Section -->
            <VBox spacing="15" alignment="CENTER" fx:id="invoiceDisplaySection" visible="false">
                <Label text="Invoice Details" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                
                <ScrollPane fx:id="invoiceScrollPane" style="-fx-max-width: 600; -fx-max-height: 400;">
                    <TextArea fx:id="invoiceTextArea" editable="false" wrapText="true" 
                              style="-fx-font-family: monospace; -fx-font-size: 12;" />
                </ScrollPane>
                
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="exportCsvButton" text="Export CSV" onAction="#onExportCSV" 
                            style="-fx-min-width: 100; -fx-min-height: 30;" />
                    <Button fx:id="exportJsonButton" text="Export JSON" onAction="#onExportJSON" 
                            style="-fx-min-width: 100; -fx-min-height: 30;" />
                    <Button fx:id="clearButton" text="Clear" onAction="#onClear" 
                            style="-fx-min-width: 80; -fx-min-height: 30;" />
                </HBox>
            </VBox>
            
            <!-- All Orders Table Section -->
            <VBox spacing="15" alignment="CENTER" fx:id="allOrdersSection" visible="false">
                <Label text="All Orders" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                
                <TableView fx:id="ordersTable" style="-fx-max-width: 800; -fx-max-height: 300;">
                    <columns>
                        <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="80" />
                        <TableColumn fx:id="customerColumn" text="Customer" prefWidth="120" />
                        <TableColumn fx:id="materialColumn" text="Material" prefWidth="150" />
                        <TableColumn fx:id="quantityColumn" text="Qty" prefWidth="60" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                        <TableColumn fx:id="totalCostColumn" text="Total Cost" prefWidth="100" />
                    </columns>
                </TableView>
                
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="generateInvoiceButton" text="Generate Invoice" onAction="#onGenerateInvoice" 
                            style="-fx-min-width: 120; -fx-min-height: 30;" />
                    <Button fx:id="hideOrdersButton" text="Hide Orders" onAction="#onHideOrders" 
                            style="-fx-min-width: 100; -fx-min-height: 30;" />
                </HBox>
            </VBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="10" bottom="20" left="20" right="20" />
            </padding>
            <Button fx:id="backButton" text="Back to Dashboard" onAction="#onBackToDashboard" 
                    style="-fx-min-width: 150; -fx-min-height: 30;" />
            <Label fx:id="statusLabel" text="Ready" style="-fx-font-size: 12; -fx-text-fill: gray;" />
        </HBox>
    </bottom>
</BorderPane>
