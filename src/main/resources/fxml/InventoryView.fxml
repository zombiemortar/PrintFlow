<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.InventoryController">
   <top>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Inventory Management" styleClass="title" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBack" text="Back to Dashboard" styleClass="secondary" />
               </children>
            </HBox>
            <Separator />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox spacing="15.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Materials and Stock:" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="addMaterialButton" mnemonicParsing="false" onAction="#onAddMaterial" text="Add Material" styleClass="success" />
                  <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#onRefresh" text="Refresh" styleClass="secondary" />
               </children>
            </HBox>
            <TableView fx:id="materialsTable" prefHeight="400.0">
               <columns>
                  <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Material Name" />
                  <TableColumn fx:id="costColumn" prefWidth="100.0" text="Cost/Gram" />
                  <TableColumn fx:id="tempColumn" prefWidth="100.0" text="Print Temp (Â°C)" />
                  <TableColumn fx:id="colorColumn" prefWidth="100.0" text="Color" />
                  <TableColumn fx:id="stockColumn" prefWidth="100.0" text="Stock (g)" />
                  <TableColumn fx:id="actionsColumn" prefWidth="200.0" text="Actions" />
               </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label fx:id="statusLabel" text="Ready" styleClass="status" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
